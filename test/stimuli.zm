// Symbolic definition of item type.
enum ItemType
{
    FRUIT1,                     // image of a popular fruit
    FRUIT2,                     // image of a less popular fruit
    NON_FRUIT,                  // image of a non-fruit
}


// Item table record.
record TestItem
{
    int         id;             // item id
    ItemType    type;           // item type
    string      imgfn;          // stimulus filename
}


